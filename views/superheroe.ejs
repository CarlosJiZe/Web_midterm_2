<%- include("partials/header"); %>

<div class="classified-dossier">
    <h1 class="classified-title">Classified Dossier</h1>

    <!-- Imagen del personaje -->
    <div class="dossier-section">
        <img src="<%= hero.images.lg %>" alt="<%= hero.name %>" class="hero-image"
             onerror="this.onerror=null; this.src='/img/placeholder_super.png';">
    </div>

    <!-- Información básica del personaje -->
    <div class="dossier-info">
        <p><strong>ID:</strong> <%= hero.id %></p>
        <p><strong>Name:</strong> <%= hero.name ? hero.name.trim() : 'Unknown' %></p>
        <p><strong>Full Name:</strong> <%= hero.biography.fullName && hero.biography.fullName.trim() !== '-' && hero.biography.fullName.trim() !== '' ? hero.biography.fullName.trim() : 'Unknown' %></p>
        <p><strong>Place of Birth:</strong> <%= hero.biography.placeOfBirth && hero.biography.placeOfBirth.trim() !== '-' && hero.biography.placeOfBirth.trim() !== '' ? hero.biography.placeOfBirth.trim() : 'Unknown' %></p>
        <p><strong>Gender:</strong> <%= hero.appearance.gender && hero.appearance.gender.trim() !== '-' && hero.appearance.gender.trim() !== '' ? hero.appearance.gender.trim() : 'Unknown' %></p>
        <p><strong>Race:</strong> <%= hero.appearance.race && hero.appearance.race.trim() !== '-' && hero.appearance.race.trim() !== '' ? hero.appearance.race.trim() : 'Unknown' %></p>
        <p><strong>Height:</strong> <%= hero.appearance.height && hero.appearance.height.length ? hero.appearance.height.join(', ') : 'Unknown' %></p>
        <p><strong>Weight:</strong> <%= hero.appearance.weight && hero.appearance.weight.length ? hero.appearance.weight.join(', ') : 'Unknown' %></p>
        <p><strong>Eye Color:</strong> <%= hero.appearance.eyeColor && hero.appearance.eyeColor.trim() !== '-' && hero.appearance.eyeColor.trim() !== '' ? hero.appearance.eyeColor.trim() : 'Unknown' %></p>
        <p><strong>Hair Color:</strong> <%= hero.appearance.hairColor && hero.appearance.hairColor.trim() !== '-' && hero.appearance.hairColor.trim() !== '' ? hero.appearance.hairColor.trim() : 'Unknown' %></p>
        <p><strong>Aliases:</strong> <%= hero.biography.aliases && hero.biography.aliases.length ? hero.biography.aliases.join(', ') : 'None' %></p>
    </div>

    <!-- Powerstats -->
    <div class="dossier-powerstats">
        <h2>Powerstats</h2>
        <ul>
            <li><strong>Intelligence:</strong> <%= hero.powerstats.intelligence != null ? hero.powerstats.intelligence : 'Unknown' %></li>
            <li><strong>Strength:</strong> <%= hero.powerstats.strength != null ? hero.powerstats.strength : 'Unknown' %></li>
            <li><strong>Speed:</strong> <%= hero.powerstats.speed != null ? hero.powerstats.speed : 'Unknown' %></li>
            <li><strong>Durability:</strong> <%= hero.powerstats.durability != null ? hero.powerstats.durability : 'Unknown' %></li>
            <li><strong>Power:</strong> <%= hero.powerstats.power != null ? hero.powerstats.power : 'Unknown' %></li>
            <li><strong>Combat:</strong> <%= hero.powerstats.combat != null ? hero.powerstats.combat : 'Unknown' %></li>
        </ul>
    </div>

    <!-- Grupo de afiliación -->
    <div class="dossier-affiliation">
        <p><strong>Group Affiliation:</strong> <%= hero.connections.groupAffiliation && hero.connections.groupAffiliation.trim() !== '-' && hero.connections.groupAffiliation.trim() !== '' ? hero.connections.groupAffiliation.trim() : 'Unknown' %></p>
    </div>

    <!-- Biografía pequeña -->
    <div class="dossier-biography">
        <h2>Biography</h2>
        <p><%= hero.biography.fullName && hero.biography.fullName.trim() !== '-' && hero.biography.fullName.trim() !== '' ? hero.biography.fullName : 'Unknown' %>, also known as <%= hero.name %>, was born in <%= hero.biography.placeOfBirth && hero.biography.placeOfBirth.trim() !== '-' && hero.biography.placeOfBirth.trim() !== '' ? hero.biography.placeOfBirth : 'Unknown' %>. They have a wide range of aliases, including <%= hero.biography.aliases && hero.biography.aliases.length ? hero.biography.aliases.join(', ') : 'None' %>. </p>
    </div>

    <!-- Navegación entre héroes -->
    <div class="dossier-navigation">
        <a href="/hero/<%= previousHeroId %>" class="btn btn-outline-danger">Previous</a>
        <a href="/hero/<%= nextHeroId %>" class="btn btn-outline-danger">Next</a>
    </div>


    <!-- Enlace para volver a la lista principal -->
     <div class="backdossg">
        <a href="/" class="btn btn-outline-dark backdoss">Back to List</a>
     </div>
    
</div>

<%- include("partials/footer"); %>